<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <!--<startup><supportedRuntime version="v2.0.50727"/></startup>-->
    
  <configSections>
    <section name="log4net" type="System.Configuration.IgnoreSectionHandler" />
    <section name="seasar" type="Seasar.Framework.Xml.S2SectionHandler, Seasar" />
  </configSections>

  <connectionStrings>
    <add name="provider"
        connectionString=
        "host=192.168.0.20;port=3306;user id=user;password=pass;database=dbname;charset=utf8;"
        providerName="MySql.Data.MySqlClient"/>
  </connectionStrings>

  <log4net>
    <appender name="TraceAppender" type="log4net.Appender.TraceAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%-5p %d [%t] %m%n" />
      </layout>
    </appender>

    <root>
      <level value="DEBUG" />
      <appender-ref ref="TraceAppender" />
    </root>

  </log4net>


  <!-- ▼Seasarの設定 -->
  <seasar>
    <assemblys>
      <!--読み込むアセンブリ-->
      <assembly>Seasar.Dao</assembly>
      <assembly>MySql.Data</assembly>
    </assemblys>
  </seasar>

</configuration>
